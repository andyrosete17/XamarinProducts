<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Products.Helpers"
             x:Class="Products.Views.LoginView"
             BindingContext = "{Binding Main, Source={StaticResource Locator}}"
             Title="Login">
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Login}"
            Padding="8"
            Spacing="16">
            <Label Text="{i18n:Translate Title}"
                HorizontalOptions="CenterAndExpand" 
                FontSize="Large"
                FontAttributes="Bold"/>
            <Grid
                Margin="50,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label 
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="{i18n:Translate Email_Label}"
                    VerticalOptions="Center"
                    />
                <Entry 
                    Grid.Column="1"
                    Grid.Row="0"
                     Placeholder="{i18n:Translate Email_placeHolder}"
                    Text="{Binding Email, Mode=TwoWay}">
                </Entry>
                <Label 
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="{i18n:Translate Password_Label}"
                    VerticalOptions="Center"
                    />
                <Entry 
                    Grid.Column="1"
                    Grid.Row="1"
                    IsPassword="True"
                    Placeholder="{i18n:Translate Password_placeHolder}"
                    Text="{Binding Password, Mode=TwoWay}">
                </Entry>
            </Grid>
            <StackLayout
                HorizontalOptions="Center"
                Orientation="Horizontal">
                <Label Text="{i18n:Translate Remember_me}"
                       VerticalOptions="Center">
                </Label>
                <Switch
                    IsToggled="{Binding IsToggle, Mode=TwoWay}">
                </Switch>
            </StackLayout>
            <Label
                HorizontalOptions="Center"
                Text="{i18n:Translate Forgot_password}"
                TextColor="LightBlue">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding RecoverPasswordCommand}">
                    </TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
            <ActivityIndicator
                IsRunning="{Binding IsRunning, Mode=TwoWay}">
            </ActivityIndicator>
            <StackLayout
                 Margin="50,0"
                Spacing="15">
            <Button 
                BackgroundColor="LightBlue"
                BorderRadius="23"
                Command ="{Binding LoginCommand}"
                FontAttributes="Bold"
                HeightRequest="46"
                IsEnabled="{Binding IsEnable, Mode=TwoWay}"
                Text="{i18n:Translate Login}"
                TextColor="White">
            </Button>
            <Button 
                BackgroundColor="LightGreen"
                BorderRadius="23"
                Command ="{Binding Register}"
                FontAttributes="Bold"
                HeightRequest="46"
                IsEnabled="{Binding IsEnable, Mode=TwoWay}"
                Text="{i18n:Translate Register_New_User}"
                TextColor="White">
             </Button>
                <Button 
                BackgroundColor="Blue"
                BorderRadius="23"
                Command ="{Binding LoginWithFacebook}"
                FontAttributes="Bold"
                HeightRequest="46"
                IsEnabled="{Binding IsEnable, Mode=TwoWay}"
                Text="{i18n:Translate Login_Facebook}"
                TextColor="White">
                </Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>